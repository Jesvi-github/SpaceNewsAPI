<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacenews.spacenews.SpaceNewsController"
      style="-fx-background-image: url('file:src/main/resources/com/spacenews/spacenews/bk.jpeg'); -fx-background-size: cover;">
    <!-- Title Label -->
    <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Space News" />

    <!-- Search Field -->
    <TextField fx:id="searchField" promptText="Enter your query here" />

    <!-- Search Button -->
    <Button fx:id="searchButton" onAction="#fetchNews" text="Search" />

    <!-- List of News -->
    <ListView fx:id="newsListView" prefHeight="400" prefWidth="600" stylesheets="@styles.css" />
</VBox>
